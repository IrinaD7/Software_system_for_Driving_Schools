@model IEnumerable<DrivingSchoolApp.Models.Student>

<h2>Список студентов</h2>

<a asp-action="Create">Добавить студента</a>

<table class="table">
    <thead>
        <tr>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Группа</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Surname</td>
                <td>@student.Name</td>
                <td>@student.Group?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@student.Id">Редактировать</a> |
                    <a asp-action="Delete" asp-route-id="@student.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
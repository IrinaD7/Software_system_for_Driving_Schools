@model IEnumerable<DrivingSchoolApp.Models.Student>

<h2>Список студентов</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить студента</a>
</p>

@if (!Model.Any())
{
    <p>Нет студентов.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Группа</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Surname</td>
                    <td>@student.Name</td>
                    <td>
                        @if (student.Group != null)
                        {
                            @student.Group.Name
                        }
                        else
                        {
                            <span class="text-muted">Не назначена</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-sm btn-warning">Редактировать</a>
                        <a asp-action="Delete" asp-route-id="@student.Id" class="btn btn-sm btn-danger">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
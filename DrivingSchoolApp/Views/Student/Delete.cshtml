@model DrivingSchoolApp.Models.Student

<h2>Удалить студента</h2>

<h3>Вы уверены, что хотите удалить этого студента?</h3>

<div>
    <p><strong>Фамилия:</strong> @Model.Surname</p>
    <p><strong>Имя:</strong> @Model.Name</p>
    <p><strong>Группа:</strong> @Model.Group?.Name</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>

@model DrivingSchoolApp.Models.Student
@using Microsoft.AspNetCore.Mvc.Rendering

<h2>Редактировать студента</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Surname"></label>
        <input class="form-control" asp-for="Surname" />
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Patronymic"></label>
        <input class="form-control" asp-for="Patronymic" />
        <span asp-validation-for="Patronymic" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Phone"></label>
        <input class="form-control" asp-for="Phone" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BirthDate"></label>
        <input class="form-control" type="date" asp-for="BirthDate" />
        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Passport"></label>
        <input class="form-control" asp-for="Passport" />
        <span asp-validation-for="Passport" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Группа</label>
        <select class="form-control" asp-for="Group.Id" asp-items="@(new SelectList(ViewBag.Groups, "Id", "Name"))">
            <option value="">-- Выберите группу --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Сохранить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>
@model DrivingSchoolApp.Models.StudyGroup

<h2>Удалить учебную группу</h2>

<div class="alert alert-danger">
    Вы уверены, что хотите удалить эту учебную группу?
</div>

<dl class="row">
    <dt class="col-sm-3">Название</dt>
    <dd class="col-sm-9">@Model.Name</dd>

    <dt class="col-sm-3">Программа</dt>
    <dd class="col-sm-9">@Model.StudyProgram</dd>

    <dt class="col-sm-3">Период обучения</dt>
    <dd class="col-sm-9">
        @Model.StartDate.ToShortDateString() —
        @Model.EndDate.ToShortDateString()
    </dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger">Удалить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>
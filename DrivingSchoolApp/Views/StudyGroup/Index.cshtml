@model IEnumerable<DrivingSchoolApp.Models.StudyGroup>

<h2>Учебные группы</h2>
<a asp-action="Create" class="btn btn-primary">Добавить группу</a>

<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Программа</th>
            <th>Дата начала</th>
            <th>Дата окончания</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var g in Model)
        {
            <tr>
                <td>@g.Name</td>
                <td>@g.StudyProgram?.Category</td>
                <td>@g.StartDate.ToShortDateString()</td>
                <td>@g.EndDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@g.Id">Редактировать</a> |
                    <a asp-action="Delete" asp-route-id="@g.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

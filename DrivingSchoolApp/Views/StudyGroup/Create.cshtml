@model DrivingSchoolApp.Models.StudyGroup

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StudyProgramId" class="control-label"></label>
        <select asp-for="StudyProgramId" class="form-control">
            <option value="">-- Выберите программу --</option>
            @foreach (var program in ViewBag.StudyPrograms)
            {
                <option value="@program.Id">@program.Category</option>
            }
        </select>
        <span asp-validation-for="StudyProgramId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" type="date" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Сохранить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>

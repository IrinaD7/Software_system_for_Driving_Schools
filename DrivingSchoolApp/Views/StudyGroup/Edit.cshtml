@model DrivingSchoolApp.Models.StudyGroup
@using Microsoft.AspNetCore.Mvc.Rendering

<h2>Редактировать учебную группу</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StudyProgram"></label>
        <select asp-for="StudyProgram" class="form-control"
                asp-items="@(new SelectList(ViewBag.StudyPrograms, "Id", "Name"))">
        </select>
        <span asp-validation-for="StudyProgram" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" type="date" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Сохранить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>
@model DrivingSchoolApp.Models.StudyProgram

<h2>Удалить учебную программу</h2>

<div>
    <h4>@Model.Category</h4>
    <dl class="row">
        <dt class="col-sm-2">Теоретические часы</dt>
        <dd class="col-sm-10">@Model.TheoryHours</dd>

        <dt class="col-sm-2">Практические часы</dt>
        <dd class="col-sm-10">@Model.PracticeHours</dd>

        <dt class="col-sm-2">Стоимость</dt>
        <dd class="col-sm-10">@Model.Cost</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Удалить</button>
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </form>
</div>
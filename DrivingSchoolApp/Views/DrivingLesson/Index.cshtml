@model IEnumerable<DrivingSchoolApp.Models.DrivingLesson>

<h2>Практические занятия</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить занятие</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Ученик</th>
            <th>Инструктор</th>
            <th>Автомобиль</th>
            <th>Дата</th>
            <th>Оценка</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Student?.Surname</td>
                <td>@item.Instructor?.Surname</td>
                <td>@item.Vehicle?.Model</td>
                <td>@item.Date</td>
                <td>@item.Grade</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Редактировать</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
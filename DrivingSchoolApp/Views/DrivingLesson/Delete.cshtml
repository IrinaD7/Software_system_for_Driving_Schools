@model DrivingSchoolApp.Models.DrivingLesson

<h2>Удалить занятие</h2>

<p>Вы уверены, что хотите удалить занятие?</p>

<ul>
    <li>Ученик: @Model.Student?.Surname</li>
    <li>Инструктор: @Model.Instructor?.Surname</li>
    <li>Дата: @Model.Date</li>
</ul>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>
@model DrivingSchoolApp.Models.Lesson

<h2>Редактировать занятие</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="TeacherId"></label>
        <select asp-for="TeacherId" class="form-control" asp-items="ViewBag.Teachers">
            <option value="">-- Выберите преподавателя --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="GroupId"></label>
        <select asp-for="GroupId" class="form-control" asp-items="ViewBag.Groups">
            <option value="">-- Выберите группу --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Classroom"></label>
        <input asp-for="Classroom" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" type="datetime-local" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Сохранить</button>
</form>

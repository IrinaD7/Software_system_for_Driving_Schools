@model DrivingSchoolApp.Models.Lesson

<h2>Добавить занятие</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label>Преподаватель</label>
        <select asp-for="TeacherId" class="form-control">
            <option value="">Выберите преподавателя</option>
            @foreach (var t in ViewBag.Teachers)
            {
                <option value="@t.Id">@t.Surname</option>
            }
        </select>
        <span asp-validation-for="TeacherId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Учебная группа</label>
        <select asp-for="GroupId" class="form-control">
            <option value="">Выберите группу</option>
            @foreach (var g in ViewBag.Groups)
            {
                <option value="@g.Id">@g.Name</option>
            }
        </select>
        <span asp-validation-for="GroupId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Classroom"></label>
        <input asp-for="Classroom" class="form-control" />
        <span asp-validation-for="Classroom" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" type="datetime-local" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Сохранить</button>
</form>
